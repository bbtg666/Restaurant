@model List<MealCategory>

@{
    ViewData["Title"] = "Admin - Meal Category";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Meal Category</h3>
            <span><a class="btn btn-primary" asp-area="Admin" asp-action="Create" asp-controller="MealCategory">Create</a></span>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <th class="align-middle">@(Model.IndexOf(category) + 1)</th>
                            <td class="align-middle">@category.Name</td>
                            <td class="align-middle">
                                <div class="d-flex  ">
                                    <a asp-area="Admin" asp-action="Edit" asp-controller="MealCategory" asp-route-id="@category.ID" class="btn btn-warning">Edit</a>
                                    <form method="post" asp-area="Admin" asp-action="Delete" asp-controller="MealCategory">
                                        <input name="id" value="@category.ID" hidden>
                                        <button type="submit" class="btn btn-danger ms-2"> Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div class="text-center h5">
                                Empty
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>