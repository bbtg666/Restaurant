@model SignUpRequest
<div class="row justify-content-center">
    <div class="card col-5">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <div class="form-outline mt-4">
                <label asp-for="@Model.Email" class="form-label" for="inputEmail"></label>
                <input asp-for="@Model.Email" type="email" id="inputEmail" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.UserName" class="form-label" for="inputAccount"></label>
                <input asp-for="@Model.UserName" type="text" id="inputAccount" class="form-control" />
                <span asp-validation-for="@Model.UserName" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.Password" class="form-label" for="intputPassword"></label>
                <input asp-for="@Model.Password" type="password" id="intputPassword" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.ConfirmPassword" class="form-label" for="intputPassword"></label>
                <input asp-for="@Model.ConfirmPassword" type="password" id="intputConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.Name" class="form-label" for="inputEmail"></label>
                <input asp-for="@Model.Name" type="text" id="inputEmail" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.PhoneNumber" class="form-label" for="intputPhone"></label>
                <input asp-for="@Model.PhoneNumber" type="text" id="intputPhone" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger "></span>
            </div>

            <div class="form-outline mt-4">
                <label asp-for="@Model.Address" class="form-label" for="intputPhone"></label>
                <input asp-for="@Model.Address" type="text" id="intputPhone" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger "></span>
            </div>

            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary btn-block col-11 m-4">Register</button>
            </div>

            <div class="text-center">
                <p>Are you already a member? <a asp-action="Login" asp-controller="Account">Login</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}